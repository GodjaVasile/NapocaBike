@page
@model NapocaBike.Areas.Identity.Pages.Account.CompleteProfileModel
@{
    ViewData["Title"] = "Complete Profile";
}

<h1>@ViewData["Title"]</h1>

<p>Please complete your member profile:</p>

<!-- Formular pentru completarea datelor de membru -->
<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Member.FirstName"></label>
        <input asp-for="Member.FirstName" class="form-control" />
        <span asp-validation-for="Member.FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Member.LastName"></label>
        <input asp-for="Member.LastName" class="form-control" />
        <span asp-validation-for="Member.LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Member.Adress"></label>
        <input asp-for="Member.Adress" class="form-control" />
        <span asp-validation-for="Member.Adress"></span>
    </div>

    <div class="form-group">
        <label asp-for="Member.Phone"></label>
        <input asp-for="Member.Phone" class="form-control" />
        <span asp-validation-for="Member.Phone"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

